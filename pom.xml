    <ingrid-mdek-api.version>1.1.0-SNAPSHOT</ingrid-mdek-api.version>
    <ingrid-utils.version>1.2</ingrid-utils.version>
    
    <!-- versions of external libraries -->
    <axis.version>1.2.1</axis.version>
    <axis-jaxrpc.version>1.2.1</axis-jaxrpc.version>
    <axis-saaj.version>1.2.1</axis-saaj.version>
    <commons-codec.version>1.3</commons-codec.version>
    <commons-collections.version>2.1</commons-collections.version>
    <commons-discovery.version>0.2</commons-discovery.version>
    <commons-el.version>1.0</commons-el.version>
    <commons-logging.version>1.0.4</commons-logging.version>
    <ehcache.version>1.1</ehcache.version>
    <jasper-compiler.version>5.5.9</jasper-compiler.version>
    <jasper-runtime.version>5.5.9</jasper-runtime.version>
